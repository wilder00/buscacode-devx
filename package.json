{
  "name": "buscacode-devx",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "lint:check": "eslint . -c eslint.config.mjs --no-fix",
    "format:fix": "prettier --ignore-path .prettierignore --write .",
    "format:check": "prettier --ignore-path .prettierignore --check .",
    "format:watch": "onchange \"**/*\" -- prettier --write --ignore-path .prettierignore --ignore-unknown {{changed}}",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:show": "http-server -c-1 -o ./coverage/index.html -p 6001",
    "coverage:show-lcov": "http-server -c-1 -o ./coverage/lcov-report/index.html -p 6001",
    "coverage:verify-lcov": "lcov-total ./coverage/lcov.info && lcov-total ./coverage/lcov.info --gte=50",
    "prepare": "husky",
    "build:packages": "lerna run build",
    "publish:packages": "lerna run build && pnpm run test && lerna publish"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/node": "8.3.4",
    "@astrojs/react": "4.0.0",
    "@astrojs/starlight": "0.29.2",
    "@astrojs/starlight-tailwind": "2.0.3",
    "@astrojs/tailwind": "5.1.3",
    "@buscacode/buttons": "workspace:*",
    "@buscacode/icons": "workspace:*",
    "@buscacode/tailwind-base": "workspace:*",
    "@buscacode/tailwind-plugins": "workspace:*",
    "@buscacode/tailwind-utils": "workspace:*",
    "@types/node": "22.10.1",
    "astro": "4.16.10",
    "prettier-plugin-tailwindcss": "0.6.9",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sharp": "0.33.5",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "9.16.0",
    "@svgr/plugin-prettier": "8.1.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.3.2",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-istanbul": "2.1.6",
    "@vitest/coverage-v8": "2.1.6",
    "@vitest/eslint-plugin": "1.0.1",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "globals": "15.12.0",
    "http-server": "14.1.1",
    "husky": "9.1.7",
    "jsdom": "25.0.1",
    "lcov-total": "2.1.1",
    "lerna": "8.1.9",
    "onchange": "7.1.0",
    "prettier": "3.4.1",
    "prettier-plugin-astro": "0.14.1",
    "rimraf": "6.0.1",
    "tsup": "8.3.5",
    "typescript-eslint": "8.16.0",
    "vitest": "2.1.6"
  },
  "overrides": {
    "eslint": "9.16.0"
  },
  "resolutions": {
    "@types/react": "18.2.0"
  },
  "engines": {
    "node": ">=18.0"
  },
  "packageManager": "pnpm@9.1.1+sha512.14e915759c11f77eac07faba4d019c193ec8637229e62ec99eefb7cf3c3b75c64447882b7c485142451ee3a6b408059cdfb7b7fa0341b975f12d0f7629c71195"
}
